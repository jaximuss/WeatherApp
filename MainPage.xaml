<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <StackLayout>
                <Entry x:Name="cityEntry" Placeholder="Enter city name or ZIP code" />
                <Button Text="Get Weather" Clicked="OnGetWeatherClicked" />
                <Label x:Name="cityNameLabel" FontSize="24" HorizontalOptions="CenterAndExpand" />
                <Label x:Name="temperatureLabel" FontSize="32" HorizontalOptions="CenterAndExpand" />
                <Label x:Name="descriptionLabel" FontSize="18" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
